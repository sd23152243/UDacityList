<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.magic.udacitylist.MainActivity"
    android:weightSum="1">


    <TextView
        android:text="My Nanodegree Apps!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/tv_title"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_weight="0.04"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="POPULAR MOVIES"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.02" />

    <Button
        android:text="STOCK HAWK"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.03" />

    <Button
        android:text="BUILD IT BIGGER"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.03" />

    <Button
        android:text="MAKE YOUR APP METRIAL"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.03" />

    <Button
        android:text="GO UBIQUITOUS"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.03" />

    <Button
        android:text="CAP STONE"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        style="@android:style/Widget.Button"
        android:layout_weight="0.04" />

</LinearLayout>
